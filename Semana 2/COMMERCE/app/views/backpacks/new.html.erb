<%= form_for @backpack do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :color %><br>
    <%= f.text_area :color %>
  </p>

  <p>
    <%= f.label :capacity %><br>
    <%= f.text_area :capacity %>
  </p>

  <p>
    <%= f.label :pokets %><br>
    <%= f.text_area :pokets %>
  </p>

  <p>
    <%= f.label :waterproof %><br>
    <%= f.text_area :waterproof %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
  <%= link_to 'Back', backpacks_path %>
</p>