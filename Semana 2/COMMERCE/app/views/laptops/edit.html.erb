<h1>Editing laptop</h1>

<%= form_for :laptop, url: laptop_path(@laptop), method: :patch do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :brand %><br>
    <%= f.text_area :brand %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_area :model %>
  </p>
  
  <p>
    <%= f.label :processor_brand %><br>
    <%= f.text_area :processor_brand %>
  </p>
  
  <p>
    <%= f.label :ram_size %><br>
    <%= f.text_area :ram_size %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', laptops_path%>

<p>
  <strong>Title:</strong>
  <%= @laptop.title %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @laptop.brand %>
</p>

<p>
  <strong>Model:</strong>
  <%= @laptop.model %>
</p>

<p>
  <strong>Processor Brand:</strong>
  <%= @laptop.processor_brand %>
</p>

<p>
  <strong>RAM Size:</strong>
  <%= @laptop.ram_size %>
</p>

<p>
  <strong>Price:</strong>
  <%= @laptop.price %>
</p>

<p>
    <%= link_to 'Edit', edit_laptop_path(@laptop)%>
    <%= link_to 'Back', laptops_path%>
</p>