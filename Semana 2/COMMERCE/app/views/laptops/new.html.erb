<%= form_for @laptop do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :brand %><br>
    <%= f.text_area :brand %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_area :model %>
  </p>

  <p>
    <%= f.label :processor_brand %><br>
    <%= f.text_area :processor_brand %>
  </p>

  <p>
    <%= f.label :ram_size %><br>
    <%= f.text_area :ram_size %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
  <%= link_to 'Back', laptops_path %>
</p>